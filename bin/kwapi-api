#!/usr/bin/env python
# -*- coding: utf-8 -*-

import sys

from kwapi.api import app
from kwapi.openstack.common import log, cfg

if __name__ == '__main__':
    cfg.CONF(sys.argv[1:], project='kwapi', default_config_files=['/etc/kwapi/api.conf'])
    log.setup('kwapi')
    
    root = app.make_app(cfg.CONF)
    root.run(host='0.0.0.0', port=cfg.CONF.api_port)
